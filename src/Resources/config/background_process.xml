<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="background_process.state_manager" class="Cocur\BackgroundProcess\BackgroundProcessStateManager">
            <argument>%kernel.environment%</argument>
        </service>

        <service id="background_process.command.list" class="Cocur\BackgroundProcess\Command\BackgroundProcessListCommand">
            <argument type="service" id="background_process.state_manager" />
            <argument>%kernel.environment%</argument>
            <tag name="console.command" command="background_process:list" />
        </service>

        <service id="background_process.command.run" class="Cocur\BackgroundProcess\Command\BackgroundProcessRunCommand">
            <argument type="service" id="background_process.state_manager" />
            <argument>%kernel.environment%</argument>
            <tag name="console.command" command="background_process:run" />
        </service>

        <service id="background_process.command.start" class="Cocur\BackgroundProcess\Command\BackgroundProcessStartCommand">
            <argument type="service" id="background_process.state_manager" />
            <argument>%kernel.environment%</argument>
            <tag name="console.command" command="background_process:start" />
        </service>

        <service id="background_process.command.stop" class="Cocur\BackgroundProcess\Command\BackgroundProcessStopCommand">
            <argument type="service" id="background_process.state_manager" />
            <argument>%kernel.environment%</argument>
            <tag name="console.command" command="background_process:stop" />
        </service>

        <service id="background_process.command.status" class="Cocur\BackgroundProcess\Command\BackgroundProcessStatusCommand">
            <argument type="service" id="background_process.state_manager" />
            <argument>%kernel.environment%</argument>
            <tag name="console.command" command="background_process:status" />
        </service>
    </services>
</container>
